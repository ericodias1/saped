!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SAPED - Sistema de Administração de Pedidos
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
        %a.navbar-brand{:href => "#"} Sistema de Administração de Pedidos
        %button.navbar-toggler{"aria-controls" => "navbarCollapse", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          %ul.navbar-nav.mr-auto
            %li.nav-item.active
              %a.nav-link{:href => orders_path}
                Gestão de pedidos
                %span.sr-only (current)
          = render 'search_form' rescue ''
      %main.flex-shrink-0.mt-4{:role => "main"}
        .container
          .mt-100
            = render '/layouts/flash'
            = yield
      %footer.footer.mt-auto.py-3
        .container
          %span.text-muted= "Copyright © #{Date.today.year}."
