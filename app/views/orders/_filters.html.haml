%h5 Filtrar por:
= search_form_for @q do |f|
  .row
    .col-sm-4
      %label.label-control Nome ou n√∫mero do pedido
      = f.search_field :name_or_order_number_cont, class: 'form-control'
    .col-sm-4
      %label.label-control Status do pedido
      = f.select :state_cont, options_for_select([:pending, :in_progress, :finished].map{|s| [t("orders.states.#{s}"), s] }, selected: @q.state_cont), {include_blank: true}, class: 'form-control'
    .col-sm-4
      = f.button 'Filtrar', class: 'btn btn-secondary', style: 'margin-top: 32px'
